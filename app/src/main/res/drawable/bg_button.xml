<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:inset="6dp">

    <!--shape用于设置形状的-->
    <!--corners其实是一个1/4圆， 指定radius即可设置弧度大小-->
    <!--solid填充整个颜色-->
    <!--stroke设置边框，width是边框宽度，dashGap是虚线之间间隙，dashWidth是虚线本身宽度 -->
    <shape>

        <corners android:radius="8dp" />
        <solid android:color="#aa0" />
        <stroke
            android:width="1dp"
            android:color="#fff"
            android:dashGap="4dp"
            android:dashWidth="8dp" />

    </shape>
</inset>